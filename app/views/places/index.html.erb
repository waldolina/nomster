<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    <li data-target="#carousel-example-generic" data-slide-to="4"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner wrapper">
    <div class="item active">
      <%= image_tag 'slider1.jpg', class: 'img-responsive' %>
    </div>
    <div class="item ">
      <%= image_tag 'slider2.jpg', class: 'img-responsive' %>
    </div>
    <div class="item ">
      <%= image_tag 'slider3.jpg', class: 'img-responsive' %>
    </div>
    <div class="item ">
      <%= image_tag 'slider4.jpg', class: 'img-responsive' %>
    </div>
    <div class="item ">
      <%= image_tag 'slider5.jpg', class: 'img-responsive' %>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
    <div class='booyah-box col-xs-10 col-xs-offset-1'>
       
       <div class='col-xs-10 col-sm-6 place_name'>
      <h1 class='place_name_link'><%= link_to place.name, place_path(place) %></h1>
        <i><%= place.address %></i><br /></br />
        <p><%= place.description %></p><br />

      </div>

      <div class='col-xs-10 col-sm-6 place_photo'>
        <% if place.photos.present? %>
            <%= image_tag place.photos.last.picture, class: 'img-responsive' %>
        <% end %>
      </div>

       <div class='clear'></div> 
       <% if place.comments.present? %>
            <div>
            <blockquote>
              <% if place.comments.last.humanized_rating.present? %>
              <b><%= place.comments.last.humanized_rating %></b> -
              <% end %>
              <%= place.comments.last.message %>

            </blockquote>
          </div>
        <% end %>


        

    </div>
<% end %>



<div class="apple_pagination col-xs-12">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
</div>
