<div class='booyah-box col-xs-10 col-xs-offset-1'>
    <div class='col-lg-2 col-med-2 col-sm-3 col-xs-3'>
        <%= image_tag 'user.png', class: 'user_image' %>
    </div>
    <div class='col-xs-10 col-sm-6'>
        <h1><%= @user.email %></h1>
        <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
        <h4><%= @user.comments.count %> total comments</h4>
        <h4><%= @user.comments.where(rating: '5_stars').count %> total reviews</h4>
    </div>
    <div class='clear'></div>
</div>

<div class='booyah-box col-xs-10 col-xs-offset-1'>
    <div class='col-xs-12'>
      <br/>
      <br/>
      <h1 class="text-center">My Comments</h1>
      <br/>
      <br/>
      <% @user.comments.each do |comment| %>
          <div class="col-xs-12 col-sm-6">
            <h3 class="restaurant-name"><%= link_to comment.place.name, place_path(comment.place) %></h2>
              <blockquote>
              <% if comment.humanized_rating.present? %>
                <b><%= comment.humanized_rating %></b> -
              <% end %>
              <%= comment.message %>
              </blockquote>
          </div>
      <% end %>
    </div>
</div>

<div class='clear'></div>

<div class='booyah-box col-xs-10 col-xs-offset-1'>
    <div class='col-xs-12'>
      <br/>
      <br/>
      <h1 class="text-center">My Places</h1>
      <br/>
      <br/>
      <% @user.places.each do |place| %>
          <div class="col-xs-12 col-sm-6">
            <h3 class="restaurant-name"><%= link_to place.name, place_path(place) %></h1>
        <i><%= place.address %></i><br /></br />
        <p><%= place.description %></p><br />
          </div>
      <% end %>
    </div>
</div>